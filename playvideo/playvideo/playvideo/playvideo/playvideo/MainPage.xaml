    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:video="clr-namespace:MediaManager.Forms;assembly=MediaManager.Forms"
    mc:Ignorable="d">
